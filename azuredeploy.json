{
   "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {
      "servicePlanName": {
         "defaultValue": "maverick",
         "type": "string"
      },
      "functionAppName": {
         "defaultValue": "maverick",
         "type": "string"
      },
      "sourceRepo": {
         "defaultValue": "https://github.com/agnnn/azure-func.git",
         "type": "string"
      },
      "sourceBranch": {
         "defaultValue": "master",
         "type": "string"
      },
      "storageAcctName": {
        "type": "String",
        "defaultValue": "py-testing-soptarkms",
      },
      "storageAccountType": {
        "type": "string",
        "defaultValue": "Standard_LRS",
        "allowedValues": [
          "Standard_LRS",
          "Standard_GRS",
          "Standard_ZRS"
        ]
      }
   },
   "variables": {
      "templatelink": "https://raw.githubusercontent.com/agnnn/azure-func/master/AppSettings.json"
   },
   "resources": [
     {
       "type": "Microsoft.Storage/storageAccounts",
       "name": "[parameters('storageAcctName')]",
       "apiVersion": "2015-06-15",
       "location": "[resourceGroup().location]",
       "properties": {
         "accountType": "[parameters('storageAccountType')]"
       }
     },
      {
         "type": "Microsoft.Web/serverfarms",
         "sku": {
            "name": "S1",
            "capacity": 1
         },
         "kind": "app",
         "dependsOn": ["[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAcctName'))]"],
         "name": "[parameters('servicePlanName')]",
         "apiVersion": "2015-08-01",
         "location": "[resourceGroup().location]",
         "properties": {
            "name": "[parameters('servicePlanName')]",
            "numberOfWorkers": 1
         }
      },
      {
          "apiVersion": "2015-01-01",
          "name": "nestedTemplate",
          "type": "Microsoft.Resources/deployments",
          "dependsOn": ["[resourceId('Microsoft.Web/serverfarms', parameters('servicePlanName'))]"],
          "properties": {
              "mode": "incremental",
              "templateLink": {
                  "uri": "[variables('templatelink')]",
                  "contentVersion": "1.0.0.0"
              },
              "parameters": {
                  "servicePlanName": {
                      "value": "[parameters('servicePlanName')]"
                  },
                  "functionAppName": {
                      "value": "[parameters('functionAppName')]"
                  },
                  "sourceRepo": {
                      "value": "[parameters('sourceRepo')]"
                  },
                  "sourceBranch": {
                      "value": "[parameters('sourceBranch')]"
                  },
                  "storageAcctName": {
                      "value": "[parameters('storageAcctName')]"
                  }

              }
          }
      }

   ]
}
